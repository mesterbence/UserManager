FROM amazoncorretto:17
ARG JAR_FILE=Backend/UserManager/target/*.jar
ARG USERMANAGER_SQL_URL
ARG USERMANAGER_SQL_USER
ARG USERMANAGER_SQL_PASS
ARG APP_IMAGE

ENV USERMANAGER_SQL_URL=$USERMANAGER_SQL_URL
ENV USERMANAGER_SQL_USER=$USERMANAGER_SQL_USER
ENV USERMANAGER_SQL_PASS=$USERMANAGER_SQL_PASS
ENV APP_IMAGE=$APP_IMAGE

EXPOSE 8085

COPY ${JAR_FILE} app.jar
CMD ["java", "-jar", "app.jar"]